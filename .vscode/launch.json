    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'mpi'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=my_mpi"
                ],
                "filter": {
                    "name": "mpi",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'my_mpi'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=my_mpi",
                    "--package=my_mpi"
                ],
                "filter": {
                    "name": "my_mpi",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'my_mpi'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=my_mpi",
                    "--package=my_mpi"
                ],
                "filter": {
                    "name": "my_mpi",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug benchmark 'mem_benchmark'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bench=mem_benchmark",
                    "--package=my_mpi"
                ],
                "filter": {
                    "name": "mem_benchmark",
                    "kind": "bench"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}